        <form action="/login" method="post">
          <div class="txt_field">
          
            <input type="text" name="email" required> 
            <span></span>
            <label>Email</label>
          </div>
         
           <div class="txt_field">
            <input type="password" name="password" required> 
             <span></span>
             <label>Password</label>
             </div>
             <input type="submit" value="Login">
             <div class="signup_link">
               Not a member ? <a href="signup"> Signup</a>
             </div>
               
          </div>
        </form>
      </div>

    <script>
        
        var images = [
            'https://media.cnn.com/api/v1/images/stellar/prod/181010131059-australia-best-beaches-cossies-beach-cocos3.jpg?q=w_1600,h_900,x_0,y_0,c_fill/w_1280',
            'https://media.cntraveler.com/photos/5671bdd1a7b05ef403fbaeec/master/pass/Whitehaven-Whitsundays-2-GettyImages.jpg',
            'https://www.hunterandbligh.com.au/wp-content/uploads/2018/11/Kangaroo-at-Lucky-Bay.-Image-by-Andrew-Atkinson-via-Shutterstock.-750x375.jpg',
            'https://qph.cf2.quoracdn.net/main-qimg-ac408da78bd3258d5bc557cb6df962e4-lq'
        ];

        var currentIndex = 0;

        function changeBackgroundImage() {
            var newImageIndex = (currentIndex + 1) % images.length;
            var newImage = images[newImageIndex];
            document.body.style.backgroundImage = 'url(' + newImage + ')';
            currentIndex = newImageIndex;
        }

        let backgroundImage = setInterval(changeBackgroundImage, 3000);
    </script>
</body>
